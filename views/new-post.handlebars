    <div class="col-12 col-lg-8 mx-auto border p-3 my-4">
        <form id="new-post-form">
            <h3>Write a New Post:</h3>

            <div class="mb-3">
                <label for="post-title" class="form-label">Title:</label>
                <input class="form-control" type="text" id="post-title" name="post-title" placeholder="An inspiring title..." required/>
            </div>

            <div class="mb-3">
                <label for="post-body" class="form-label">Body:</label>
                <textarea class="form-control" id="post-body" name="post-body" placeholder="Some convincing text..." required></textarea>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>


